<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xyz.management.project.library.mapper.PaymentRecordMapper">

    <insert id="add" parameterType="xyz.management.project.library.entity.PaymentRecord">
        INSERT INTO payment_record (
            id,
            amount,
            date,
            project_id
        ) VALUES (
            #{id},
            #{amount},
            #{date},
            #{projectId}
        )
    </insert>

    <select id="get" parameterType="xyz.management.project.library.entity.PaymentRecord">
        SELECT * FROM payment_record
        <where>
            id IN
            <foreach collection="idList" item="id" open="(" separator="," close=")">
                #{id}
            </foreach>
        </where>
    </select>

</mapper>