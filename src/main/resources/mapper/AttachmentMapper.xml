<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xyz.management.project.library.mapper.AttachmentMapper">

    <insert id="add" parameterType="xyz.management.project.library.entity.Attachment">
        INSERT INTO attachment (
            id,
            file_name,
            storage_key,
            mime_type,
            file_size,
            file_order,
            other_files_item_id
        ) VALUES (
            #{id},
            #{fileName},
            #{storageKey},
            #{mimeType},
            #{fileSize},
            #{fileOrder},
            #{otherFilesItemId}
        )
    </insert>

    <select id="get" parameterType="xyz.management.project.library.entity.Attachment">
        SELECT * FROM attachment
        <where>
            id IN
            <foreach collection="idList" item="id" open="(" separator="," close=")">
                #{id}
            </foreach>
        </where>
    </select>

</mapper>